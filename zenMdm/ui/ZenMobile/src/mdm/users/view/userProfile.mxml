<?xml version="1.0" encoding="utf-8"?>

<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 
		 xmlns:mx="library://ns.adobe.com/flex/mx" styleName="divGridStyle" cornerRadius="5" xmlns:view="mdm.apps.view.*">
	
	<fx:Declarations>
		
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
	</fx:Declarations>
	
	<fx:Style>

		@namespace s "library://ns.adobe.com/flex/spark";
		
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		.divGridStyle {
			
			color: #3E3E3E;
			
			font-family: sans-serif;
			
			background-color : #ffffff;
			
			border-color : #999999;
			
			border-thickness : 1;      
			
			border-style : solid;
			
			padding-top : 5;
			
			padding-bottom : 5;
			
		}
		
		.titleStyle {
			
			padding-top : 4;
			
			padding-left : 10;
			
			font-size : 20;
			
		}
		
		.hruleStyle {
			
			background-color : #999999;
			
		}
		
	</fx:Style>
	
	<mx:HBox id="title" width="100%" styleName="titleStyle">                      
		
		<mx:Label id="gridLabel" text="Complex table with checkboxes and controls"/>
		
		<mx:Spacer height="100%"/>                     
		
	</mx:HBox>
	
	<mx:HRule width="100%" height="1"  styleName="hruleStyle"/>
	
	<view:appList width="100%" height="100%" backgroundColor="#ffffff">
		
		
		
	</view:appList>
	
</mx:VBox>