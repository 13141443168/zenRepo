<?xml version="1.0" encoding="utf-8"?>

<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 
		 styleName="divGridStyle" cornerRadius="5" 
		 
		 xmlns:view="mdm.apps.view.*" xmlns:view1="mdm.users.view.*" horizontalAlign="center" xmlns:view2="mdm.devices.view.*" horizontalScrollPolicy="off" verticalScrollPolicy="off">
	
	<fx:Declarations>
		
		
		
	</fx:Declarations>
	
	<fx:Style>

		@namespace s "library://ns.adobe.com/flex/spark";
		
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		.divGridStyle {
			
			color: #3E3E3E;
			
			font-family: sans-serif;
			
			background-color : #ffffff;
			
			border-color : #999999;
			
			border-thickness : 1;      
			
			border-style : solid;
			
			padding-top : 5;
			
			padding-bottom : 5;
			
		}
		
		.titleStyle {
			
			padding-top : 4;
			
			padding-left : 10;
			
			font-size : 20;
			
		}
		
		.hruleStyle {
			
			background-color : #999999;
			
		}
		
		.basicGridStyle {
			
			vertical-grid-lines: true;
			
			vertical-grid-line-color : #999999;
			
			border-style: solid;
			
			alternating-item-colors: #F4FBFF, #FFFFFF;
			
			border-color : #999999;
			
		}
		
		.basicGridHdrStyle {
			
			padding-left : 5;
			
			font-family: sans-serif;
			
			font-weight : normal;
			
			font-size : 14;
			
			color : #808080;
			
			header-height : 50;
			
			vertical-align : middle;
			
		}                              
		
	</fx:Style>
	
	<fx:Script>

		<![CDATA[
			
			import mx.managers.PopUpManager;
			
			
			
			import spark.components.PopUpAnchor;
			
			public function openAddDevice() {
				
				var devPop:addDevicePopup = PopUpManager.createPopUp(this, addDevicePopup, false) as addDevicePopup;
				
				PopUpManager.centerPopUp(devPop);
				
			} 
			
		]]>
		
	</fx:Script>
	
	<mx:HBox id="title" width="100%" styleName="titleStyle">                      
		
		<mx:Label id="gridLabel" text="Devices Dashboard"/>
		
		<mx:Spacer height="100%"/>
		
	</mx:HBox>
	
	<mx:HRule width="100%" height="1"  styleName="hruleStyle"/>
	
	
	
	<mx:VBox width="95%" height="100%" paddingBottom="10" paddingTop="10" paddingLeft="10" paddingRight="10" horizontalScrollPolicy="off" verticalScrollPolicy="off">
		
		<view2:deviceDashboard id="deviceDashboard" width="100%" height="100%"/>
		
	</mx:VBox>
	
	
	
</mx:VBox>

