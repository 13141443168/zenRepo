<?xml version="1.0" encoding="utf-8"?>

    <TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp" android:background="#B02B2C">

            <TextView android:text="General Info" android:textSize="30dp" />

        </TableRow>

        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <View android:layout_width="fill_parent" android:layout_height="1dip" />

        </TableRow>        

        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <TextView android:text="Agent Version" android:textSize="20dp"/>

            <TextView android:id="@+id/agentVersion"/>

        </TableRow>

        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <TextView android:text="Install Date" android:textSize="20dp"/>

            <TextView android:id="@+id/agentInstallDate"/>        

        </TableRow>

        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <TextView android:text="Last Recorded" android:textSize="20dp"/>

            <TextView android:id="@+id/lastRecorded"/>                

        </TableRow>

        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <TextView android:text="Policy" android:textSize="20dp"/>

            <TextView android:id="@+id/agentPolicy"/>                

        </TableRow>

        <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="wrap_content">

            <TextView android:text="More Info" android:textSize="20dp"/>

            <TextView android:text="ZenMobile Website" android:clickable="true"/>               

        </TableRow>

        <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:padding="5dp" android:layout_height="fill_parent" android:gravity="bottom">

            <Button android:id="@+id/backButton" android:text="Back"/>              

        </TableRow>

    </TableLayout>
